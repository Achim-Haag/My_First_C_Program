{
    "version": 8,
    "configurePresets": [
        {
            "name": "Win10_MSVC-17-2022-x64-Base",
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			},	
			"hidden": true,
            "displayName": "Visual Studio Community 2022 Base - amd64",
            "description": "Using compilers for Visual Studio 17 2022 (x64 architecture)",
            "generator": "Visual Studio 17 2022",
            "toolset": "host=x64",
            "architecture": "x64",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            }
        },
        {
            "name": "Win10_MSVC-17-2022-x64-Debug",
            "displayName": "Visual Studio Community 2022 Debug - amd64",
            "description": "Using compilers for Visual Studio 17 2022 (x64 architecture)",
			"inherits": [ "Win10_MSVC-17-2022-x64-Base" ],
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_CONFIGURATION_TYPES": "Debug"
            }
        },
        {
            "name": "Win10_MSVC-17-2022-x64-Release",
            "displayName": "Visual Studio Community 2022 Release - amd64",
            "description": "Using compilers for Visual Studio 17 2022 (x64 architecture)",
			"inherits": [ "Win10_MSVC-17-2022-x64-Base" ],
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_CONFIGURATION_TYPES": "Release"
            }
        },
        {
            "name": "GCC 8.5.0 x86_64-redhat-linux",
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Linux"
			},	
            "displayName": "GCC 8.5.0 x86_64-redhat-linux",
            "description": "Using compilers: C = /usr/bin/gcc, CXX = /usr/bin/g++",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_C_COMPILER": "/usr/bin/gcc",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Win10_MSVC-17-2022-x64-build-debug",
            "displayName": "Visual Studio Community 2022 Build Debug - amd64",
            "configurePreset": "Win10_MSVC-17-2022-x64-Debug",
            "configuration": "Debug"
        },
        {
            "name": "Win10_MSVC-17-2022-x64-build-release",
            "displayName": "Visual Studio Community 2022 Build Release - amd64",
            "configurePreset": "Win10_MSVC-17-2022-x64-Release",
            "configuration": "Release"
        }
    ]
}